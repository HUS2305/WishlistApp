{
  "name": "wishlistapp",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "mobile:dev": "turbo run dev --filter=mobile",
    "backend:dev": "turbo run dev --filter=backend",
    "db:migrate": "turbo run db:migrate --filter=database",
    "db:studio": "turbo run db:studio --filter=database",
    "db:generate": "turbo run db:generate --filter=database",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "dotenv": "^17.2.3",
    "pg": "^8.16.3",
    "prettier": "^3.1.1",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "npm@9.9.0"
}
